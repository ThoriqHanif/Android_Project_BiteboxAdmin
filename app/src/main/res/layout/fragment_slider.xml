<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragment.SliderFragment">

    <ImageView
        android:id="@+id/ivSlider"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/preview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Upload Slider"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/ivSlider"
        app:layout_constraintStart_toStartOf="@+id/ivSlider"
        app:layout_constraintTop_toBottomOf="@+id/ivSlider" />
</androidx.constraintlayout.widget.ConstraintLayout>